<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Invoice List</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li>
                          <%= link "New Invoice Deposit", to: invoice_path(@conn, :newdeposit), class: "btn btn-glow btn-round btn-bg-gradient-x-red-pink" %>
                        </li>
                        <li>
                          <%= link "New Invoice Backing", to: invoice_path(@conn, :newbacking), class: "btn btn-glow btn-round btn-bg-gradient-x-red-pink" %>
                        </li>                        
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body p-0 pb-0">
<br>


<div class="container">

                            <table class="table">
                                <thead class="bg-primary white">
                                <tr>
                                  <th>Invoice date</th>
                                  <th>#</th>
                                  <th>Backer ID</th>
                                  <th>Amount</th>
                                  <th>Status</th>
                                  <th>Method</th>
                            
                                  <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                  <%= for invoice <- @invoices do %>
                                      <tr>
                                        <td><%= invoice.inserted_at %></td>
                                        <th><%= invoice.id %></th>
                                        <td><%= invoice.backer_id %></td>
                                        <td><%= invoice.amount %></td>
                                        <td>
                                          <%= if invoice.status == "paid" do %>
                                          <span class="badge badge-pill badge-success"><%= invoice.status %></span>
                                          <% else %>
                                          <%= invoice.status %>
                                          <% end %>

                                        </td>
                                        <td><%= invoice.method %></td>
                                  
                                        <td class="text-right">
                                          <span><%= link "Show", to: invoice_path(@conn, :show, invoice), class: "btn btn-default btn-xs" %></span>
                                          <span><%= link "Edit", to: invoice_path(@conn, :edit, invoice), class: "btn btn-default btn-xs" %></span>
                                          <span><%= link "Delete", to: invoice_path(@conn, :delete, invoice), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
                                        </td>
                                      </tr>
                                  <% end %>
                                </tbody>
                            </table>

</div>
<br>


                </div>
            </div>
        </div>
    </div>
</div>


</div>

