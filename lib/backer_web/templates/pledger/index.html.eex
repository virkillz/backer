        <div class="content-body"><!-- Revenue, Hit Rate & Deals -->  

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Pledger List</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li>
                          <%= link "New Pledger", to: pledger_path(@conn, :new), class: "btn btn-glow btn-round btn-bg-gradient-x-red-pink" %>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body p-0 pb-0">
<br>


<div class="container">

                            <table class="table">
                                <thead class="bg-primary white">
                                <tr>
                                  <th>Pledger ID</th>
                                  <th>Backer Email</th>
                                  <th>Category</th>
                                  <th>Title</th>
                                  <th>Status</th>
                            
                                  <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                  <%= for pledger <- @pledgers do %>
                                      <tr>
                                        <td><%= pledger.id %></td>
                                        <td><%= pledger.backer.email %></td>
                                        <td><%= pledger.category.name %></td>
                                        <td><%= pledger.title.name %></td>                                               
                                        <td><%= pledger.status %></td>
                                  
                                        <td class="text-right">
                                          <%= link to: pledger_path(@conn, :show, pledger) do %>
                                           <button type="button" class="btn btn-outline-success mr-1"><i class="ft-monitor"></i></button>
                                          <% end %>                                            
                                          <%= link to: pledger_path(@conn, :edit, pledger) do %>
                                           <button type="button" class="btn btn-outline-warning mr-1"><i class="ft-edit"></i></button>
                                          <% end %>                                       
                                          <%= link to: pledger_path(@conn, :delete, pledger), method: :delete, data: [confirm: "Are you sure?"] do %>
                                           <button type="button" class="btn btn-outline-danger mr-1"><i class="ft-trash-2"></i></button>
                                          <% end %>
                                        </td>

                                      </tr>
                                  <% end %>
                                </tbody>
                            </table>
<%= pagination_links @conn, @pledgers, view_style: :bootstrap_v4, distance: 5, next: "next", previous: "prev", first: true, last: true %>
</div>
<br>


                </div>
            </div>
        </div>
    </div>
</div>


</div>

