<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Invoice detail List</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body p-0 pb-0">
<br>


<div class="container">

                            <table class="table">
                                <thead class="bg-primary white">
                                <tr>
                                  <th>#</th>
                                  <th>Invoice ID</th>
                                  <th>Amount</th>
                                  <th>Year</th>
                                  <th>Month</th>
                                  <th>Type</th>
                            
                                  <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                  <%= for invoice_detail <- @invoice_details do %>
                                      <tr>
                                        <td><%= invoice_detail.id %></td>
                                        <td><%= invoice_detail.invoice_id %></td>
                                        <td><%= invoice_detail.amount %></td>
                                        <td><%= invoice_detail.year %></td>
                                        <td><%= invoice_detail.month %></td>
                                        <td><%= invoice_detail.type %></td>
                                  
                                        <td class="text-right">
                                          <span><%= link "Show", to: Router.invoice_detail_path(@conn, :show, invoice_detail), class: "btn btn-default btn-xs" %></span>
                                        </td>
                                      </tr>
                                  <% end %>
                                </tbody>
                            </table>
<%= pagination_links @conn, @invoice_details, view_style: :bootstrap_v4, distance: 5, next: "next", previous: "prev", first: true, last: true %>                              

</div>
<br>


                </div>
            </div>
        </div>
    </div>
</div>


</div>

