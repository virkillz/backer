<div class="content-header row">
  <div class="content-header-left col-md-4 col-12 mb-2">
    <h3 class="content-header-title">Settlement List</h3>
  </div>
  <div class="content-header-right col-md-8 col-12">
    <div class="breadcrumbs-top float-md-right">
      <div class="breadcrumb-wrapper mr-1">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a>
          </li>
          <li class="breadcrumb-item"><a href="/admin/settlements">Settlements List</a>
          </li>
          <li class="breadcrumb-item active">Index
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="content-body">
  <!-- Revenue, Hit Rate & Deals -->

  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Settlement List</h4>
          <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
          <div class="heading-elements">
            <ul class="list-inline mb-0">
              <li>
              <a href="<%= Router.settlement_path(@conn, :new) %>"><button type="button" class="btn btn-glow btn-round btn-bg-gradient-x-red-pink">New Settlement</button></a>
              </li>
            </ul>
          </div>
        </div>
        <div class="card-content collapse show">
          <div class="card-body p-0 pb-0">
            <br>

            
            <div class="container">

              <table class="table">
                <thead class="bg-primary white">
                  <tr>
                     <th>Donee</th>
                     <th>Oldest Invoice</th>
                     <th>Amount</th>
                    
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <%= for donee <- @donees do %>
                    <tr>
                       <td>
                        ID: <%= donee.donee_id %> <br>
                        <%= donee.display_name %> <br>
                        @<%= donee.username %>
                      </td>
                      <td>
                        <%= donee.oldest_invoice_date %>
                      </td>
                       <td>
                        <%= donee.amount_total %>
                      </td>
                      
                      <td class="text-right">
                        <span>
                          <%= link "Process" , to: "/admin/settlements/new/#{donee.donee_id}", class: "btn btn-primary btn-xs" %>
                        </span>
                      </td>
                    </tr>
                    <% end %>
                </tbody>
              </table>

            </div>
            <br>
            

          </div>
        </div>
      </div>
    </div>
  </div>


</div>