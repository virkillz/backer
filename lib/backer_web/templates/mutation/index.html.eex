        <div class="content-body"><!-- Revenue, Hit Rate & Deals -->  

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Mutation List</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li>
                          <%= link "New Mutation", to: mutation_path(@conn, :new), class: "btn btn-glow btn-round btn-bg-gradient-x-red-pink" %>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body p-0 pb-0">
<br>


<div class="container">

                            <table class="table">
                                <thead class="bg-primary white">
                                <tr>
                                  <th>Asset</th>
                                  <th>Backer id string</th>
                                  <th>Debit</th>
                                  <th>Credit</th>
                                  <th>Frozen amount</th>
                                  <th>Balance</th>
                                  <th>Action type</th>
                                  <th>Reason</th>
                                  <th>Ref</th>
                            
                                  <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                  <%= for mutation <- @mutations do %>
                                      <tr>
                                        <td><%= mutation.asset %></td>
                                        <td><%= mutation.backer_id_string %></td>
                                        <td><%= mutation.debit %></td>
                                        <td><%= mutation.credit %></td>
                                        <td><%= mutation.frozen_amount %></td>
                                        <td><%= mutation.balance %></td>
                                        <td><%= mutation.action_type %></td>
                                        <td><%= mutation.reason %></td>
                                        <td><%= mutation.ref_id %></td>
                                  
                                        <td class="text-right">
                                          <span><%= link "Show", to: mutation_path(@conn, :show, mutation), class: "btn btn-default btn-xs" %></span>
                                          <span><%= link "Edit", to: mutation_path(@conn, :edit, mutation), class: "btn btn-default btn-xs" %></span>
                                          <span><%= link "Delete", to: mutation_path(@conn, :delete, mutation), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
                                        </td>
                                      </tr>
                                  <% end %>
                                </tbody>
                            </table>

</div>
<br>


                </div>
            </div>
        </div>
    </div>
</div>


</div>

