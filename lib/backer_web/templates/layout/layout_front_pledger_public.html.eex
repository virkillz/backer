<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta name="keywords" content="HTML,CSS,XML,JavaScript">
    <meta name="author" content="EcologyTheme">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Backer - Sustainable Support Network</title>
    <link rel="shortcut icon" href="/front/images/favicon.ico" type="image/x-icon">
    <!-- Goole Font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/front/css/assets/bootstrap.min.css">
    <!-- Font awsome CSS -->
    <link rel="stylesheet" href="/front/css/assets/flaticon.css">
    <link rel="stylesheet" href="/front/css/assets/magnific-popup.css">    
    <!-- owl carousel -->
    <link rel="stylesheet" href="/front/css/assets/owl.carousel.css">
    <link rel="stylesheet" href="/front/css/assets/owl.theme.css">     
    <link rel="stylesheet" href="/front/css/assets/animate.css"> 
    <link rel="stylesheet" href="/front/css/assets/preloader.css">
    <!-- Slick Carousel -->
    <link rel="stylesheet" href="/front/css/assets/slick.css">  
    <!-- Mean Menu-->
    <link rel="stylesheet" href="/front/css/assets/meanmenu.css">

    <!-- main style-->
    <link rel="stylesheet" href="/front/css/style.css">    
    <link rel="stylesheet" href="/front/css/responsive.css">
                     
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="background-color: rgba(245, 245, 255, 1);">
<header class="header_inner_pages" style="max-height: 350px; background: linear-gradient(to right, rgba(0,0,0, 0.1) , rgba(0,0,0, 0.7)), url(<%= @pledger.pledger.background %>) no-repeat">
     <div class="header-top">
        <div class="sassnex_nav" style="padding-top: 0px; background-color: black;">
            <div class="container">
                <nav class="navbar navbar-expand-md navbar-light">
                    <a class="navbar-brand" href="/"><img src="/front/images/backer-logo-whiteish.png" alt="logo"></a>
                    <div class="collapse navbar-collapse mean_menu" id="navbarSupportedContent">
                        <ul class="navbar-nav nav ml-auto">

                           <li class="nav-item"><a href="/" class="nav-link active">Home</a></li>
                           <li class="nav-item"><a href="/explore" class="nav-link">Explore</a></li>
                           <li class="nav-item"><a href="/backers" class="nav-link">Backer</a></li>                                                 
                            <li class="nav-item"><a href="#" class="nav-link">Informasi</a>
                                 <ul class="dropdown_menu">
                                    <li><a href="/">Home</a></li>
                                    <li><a href="about.html">Explore</a></li> 
                                    <li><a href="about.html">Backer</a></li>
                                    <li><a href="about.html">Cara Kerja</a></li>                                                                                                             
                                    <li class="nav-item"><a href="#" class="nav-link">Informasi</a>
                                        <ul class="dropdown_menu">
                                            <li><a href="shop-page.html">Shop Page</a></li>
                                            <li><a href="shop-details.html">Shop Details</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            
                        </ul>
                    </div>
                    <div class="mr-auto others_option">
                        <ul class="navbar-nav mx-auto d-flex">
                            <li class="header-search-box btn-color-dark">
                                <a href="#header-search" title="Search">
                                    <i class="flaticon-search search_btn"></i>
                                </a>
                            </li>
                                <%= if @conn.assigns.backer_signed_in? do %>
                                <li class="dropdown"> 
                                    <span data-toggle="dropdown" class="dropdown-toggle" style="color: white;">
                                      <span class="display_name_nav"><%= @conn.assigns.current_backer.display_name %></span>
                                      <img src="<%= @conn.assigns.current_backer.avatar %>" class="avatar-small" />
                                    </span>

                                            <ul class="dropdown_menu">
                                              <li> <a href="/backer/<%= @conn.assigns.current_backer.username %>">My Backer Profile</a> </li>

                                              <%= if @conn.assigns.current_backer.is_pledger do %>
                                              <li> <a href="/pledger/<%= @conn.assigns.current_backer.username %>">My Pledger Profile</a> </li>
                                              <li> <a href="/dashboard">My Pledger Dashboard</a> </li>                                                              
                                              <% end %>

                                                <li> <a href="/signout">Logout</a> </li>
                                            </ul>
                                              

                                </li> 
                                <% else %>
                            <li>
                                <a href="/login" class="btn btn-default">Login</a>
                                <a href="/register" class="btn btn-default">Register</a>
                            </li>              

                                <% end %>  
                        </ul>
                    </div>
                </nav><!-- END NAVBAR -->
            </div> 
        </div>
    </div>

    <div class="intro_wrapper">
        <div class="container">  
            <div class="row">        
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="intro_text">
                        <h1 class="wow fadeInUp" data-wow-duration="2s" data-wow-delay=".2s"><%= @pledger.display_name %></h1>
                        <div class="select_pages">
                            <span><%= @pledger.pledger.title.name %></span> 
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>  
</header> <!-- End Header -->
<div class="hidden-sm hidden-xs">
        <div class="profile-info">
          <img src="<%= @pledger.avatar %>" class="profile-photo grow">
        </div>                
</div>

<!-- Search Box Start Here -->
<div id="header-search" class="header-search">
    <button type="button" class="close">Ã—</button>
    <form class="header-search-form">
        <input type="search" value="" placeholder="Type here........" />
        <button type="submit" class="search-btn">Search</button>
    </form>
</div>


<section style="background-color: white;min-height: 90px; padding: 20px 20px 20px 350px; z-index: 9999;">
    <div class="row">
    <ul class="menu-cover">
        <li><a href="/pledger/<%= @pledger.username %>" class="link-active">Overview</a></li>
        <li><a href="/pledger/<%= @pledger.username %>/posts">Post</a></li>
        <li><a href="/pledger/<%= @pledger.username %>/backers" >Backer</a></li>     
    </ul>

    <span style="float: right; position: absolute; right: 35px;"> <span style="margin-right: 30px; font-size: 17px; font-weight: 700;"><%= Enum.count(@backers) %> BACKERS</span> 

    <a href="/pledger/<%= @pledger.username %>/tier"><button class="btn_backme grow">Support</button></a></span>
</div>
</section>



<%= render @view_module, @view_template, assigns %>


<div style="min-height: 40px"></div>

<!-- Footer -->  
<footer id="footer_app_x" style="padding-top: 0px; background-color: white;">
    <div class="footer_bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>Copyright  &copy; Backer 2019. All rights reserved.</p>
                </div>
                <div class="col-md-6">
                    <ul class="copy_right_items d-flex justify-content-end">
                        <li><a href="#">Terms & Use</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer><!-- End Footer -->

<section id="scroll-top" class="scroll-top">
    <h2 class="disabled">Scroll to top</h2>
    <div class="to-top pos-rtive">
        <a href="#"><i class = "flaticon-right-arrow"></i></a>
    </div>
</section>

    <!-- JavaScript -->
    <script src="/front/js/jquery-3.2.1.min.js"></script>
    <script src="/front/js/popper.min.js"></script>
    <script src="/front/js/bootstrap.min.js"></script>
    <script src="/front/js/jquery.magnific-popup.min.js"></script>     
    <script src="/front/js/owl.carousel.min.js"></script>  
    <script src="/front/js/slick.min.js"></script>  
    <!-- Main Menu -->
    <script src="/front/js/jquery.meanmenu.min.js"></script>   
    <script src="/front/js/custom.js"></script>   
</body>
</html>
